<Page
    x:Class="DBADash.ModernUI.Views.AlertsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="using:DevExpress.WinUI.Grid"
    Background="{StaticResource DBADashBackgroundBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Alert Management" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Monitor and manage SQL Server alerts and notifications" 
                      Style="{StaticResource BodyTextBlockStyle}" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Alert Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Critical Alerts -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Margin="0,0,12,0">
                <StackPanel Padding="20" Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE783;" FontSize="16" Foreground="#FFE74C3C"/>
                        <TextBlock Text="Critical" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.CriticalAlerts, Mode=OneWay}" 
                              Style="{StaticResource SubheaderTextBlockStyle}" 
                              Foreground="#FFE74C3C"/>
                    <TextBlock Text="Requires immediate attention" 
                              Style="{StaticResource CaptionTextBlockStyle}" 
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Warning Alerts -->
            <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Margin="6,0,6,0">
                <StackPanel Padding="20" Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE7BA;" FontSize="16" Foreground="#FFF39C12"/>
                        <TextBlock Text="Warning" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.WarningAlerts, Mode=OneWay}" 
                              Style="{StaticResource SubheaderTextBlockStyle}" 
                              Foreground="#FFF39C12"/>
                    <TextBlock Text="Monitor closely" 
                              Style="{StaticResource CaptionTextBlockStyle}" 
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Info Alerts -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}" Margin="6,0,6,0">
                <StackPanel Padding="20" Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE946;" FontSize="16" Foreground="#FF3498DB"/>
                        <TextBlock Text="Information" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.InfoAlerts, Mode=OneWay}" 
                              Style="{StaticResource SubheaderTextBlockStyle}" 
                              Foreground="#FF3498DB"/>
                    <TextBlock Text="For your awareness" 
                              Style="{StaticResource CaptionTextBlockStyle}" 
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Acknowledged Alerts -->
            <Border Grid.Column="3" Style="{StaticResource CardBorderStyle}" Margin="12,0,0,0">
                <StackPanel Padding="20" Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="#FF27AE60"/>
                        <TextBlock Text="Acknowledged" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.AcknowledgedAlerts, Mode=OneWay}" 
                              Style="{StaticResource SubheaderTextBlockStyle}" 
                              Foreground="#FF27AE60"/>
                    <TextBlock Text="Being addressed" 
                              Style="{StaticResource CaptionTextBlockStyle}" 
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Toolbar -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search and Filter -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                <TextBox x:Name="SearchBox" 
                        PlaceholderText="Search alerts..." 
                        MinWidth="300"
                        Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                
                <ComboBox x:Name="SeverityFilterComboBox" 
                         Header="Severity" 
                         MinWidth="120"
                         SelectedIndex="{x:Bind ViewModel.SeverityFilterIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Critical"/>
                    <ComboBoxItem Content="Warning"/>
                    <ComboBoxItem Content="Info"/>
                </ComboBox>

                <ComboBox x:Name="StatusFilterComboBox" 
                         Header="Status" 
                         MinWidth="140"
                         SelectedIndex="{x:Bind ViewModel.StatusFilterIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Acknowledged"/>
                    <ComboBoxItem Content="Resolved"/>
                </ComboBox>

                <ComboBox x:Name="InstanceFilterComboBox" 
                         Header="Instance" 
                         MinWidth="160"
                         ItemsSource="{x:Bind ViewModel.InstanceNames, Mode=OneWay}"
                         SelectedIndex="{x:Bind ViewModel.InstanceFilterIndex, Mode=TwoWay}"/>

                <DatePicker x:Name="FromDatePicker" 
                           Header="From Date"
                           Date="{x:Bind ViewModel.FromDate, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Acknowledge Selected" 
                       Command="{x:Bind ViewModel.AcknowledgeSelectedCommand}"
                       Style="{StaticResource AccentButtonStyle}"/>
                
                <Button Content="Resolve Selected" 
                       Command="{x:Bind ViewModel.ResolveSelectedCommand}"/>
                
                <Button Content="Export" 
                       Command="{x:Bind ViewModel.ExportCommand}"/>
                
                <Button Content="Refresh" 
                       Command="{x:Bind ViewModel.RefreshCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Alerts Grid -->
        <Border Grid.Row="3" Style="{StaticResource CardBorderStyle}">
            <dx:GridControl x:Name="AlertsGrid" 
                           ItemsSource="{x:Bind ViewModel.FilteredAlerts, Mode=OneWay}"
                           ShowGroupPanel="False"
                           AutoGenerateColumns="False"
                           SelectionMode="MultipleRow"
                           SelectedItems="{x:Bind ViewModel.SelectedAlerts, Mode=TwoWay}">
                
                <dx:GridControl.View>
                    <dx:TableView AutoWidth="True" 
                                 ShowGroupPanel="False"
                                 NavigationStyle="Row"
                                 ShowIndicator="True"
                                 AllowEditing="False"
                                 AllowSorting="True"
                                 AllowGrouping="True"
                                 ShowAutoFilterRow="True"/>
                </dx:GridControl.View>

                <dx:GridControl.Columns>
                    <!-- Severity -->
                    <dx:GridColumn FieldName="Severity" 
                                  Header="Severity" 
                                  Width="100"
                                  AllowSorting="True"
                                  AllowGrouping="True">
                        <dx:GridColumn.DisplayTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse Width="12" Height="12" 
                                            Fill="{Binding Severity, Converter={StaticResource SeverityToBrushConverter}}"/>
                                    <TextBlock Text="{Binding Severity}" 
                                              Style="{StaticResource BodyStrongTextBlockStyle}"
                                              Foreground="{Binding Severity, Converter={StaticResource SeverityToBrushConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </dx:GridColumn.DisplayTemplate>
                    </dx:GridColumn>

                    <!-- Alert Type -->
                    <dx:GridColumn FieldName="AlertType" 
                                  Header="Alert Type" 
                                  Width="150"
                                  AllowSorting="True"
                                  AllowGrouping="True"/>

                    <!-- Instance -->
                    <dx:GridColumn FieldName="InstanceName" 
                                  Header="Instance" 
                                  Width="140"
                                  AllowSorting="True"
                                  AllowGrouping="True"/>

                    <!-- Message -->
                    <dx:GridColumn FieldName="Message" 
                                  Header="Message" 
                                  Width="300"
                                  AllowSorting="False">
                        <dx:GridColumn.DisplayTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Message}" 
                                              Style="{StaticResource BodyTextBlockStyle}"
                                              TextWrapping="Wrap"
                                              MaxLines="2"/>
                                    <TextBlock Text="{Binding Details}" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              TextWrapping="Wrap"
                                              MaxLines="1"/>
                                </StackPanel>
                            </DataTemplate>
                        </dx:GridColumn.DisplayTemplate>
                    </dx:GridColumn>

                    <!-- Timestamp -->
                    <dx:GridColumn FieldName="Timestamp" 
                                  Header="Occurred" 
                                  Width="130"
                                  AllowSorting="True">
                        <dx:GridColumn.DisplayTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Timestamp, Converter={StaticResource DateTimeToStringConverter}}" 
                                              Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock Text="{Binding Timestamp, Converter={StaticResource RelativeTimeConverter}}" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </dx:GridColumn.DisplayTemplate>
                    </dx:GridColumn>

                    <!-- Status -->
                    <dx:GridColumn FieldName="Status" 
                                  Header="Status" 
                                  Width="100"
                                  AllowSorting="True"
                                  AllowGrouping="True">
                        <dx:GridColumn.DisplayTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" 
                                       Padding="8,4"
                                       Background="{Binding Status, Converter={StaticResource StatusToBackgroundConverter}}">
                                    <TextBlock Text="{Binding Status}" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="{Binding Status, Converter={StaticResource StatusToForegroundConverter}}"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </dx:GridColumn.DisplayTemplate>
                    </dx:GridColumn>

                    <!-- Acknowledged By -->
                    <dx:GridColumn FieldName="AcknowledgedBy" 
                                  Header="Acknowledged By" 
                                  Width="120"
                                  AllowSorting="True"/>

                    <!-- Actions -->
                    <dx:GridColumn Header="Actions" 
                                  Width="140"
                                  AllowSorting="False"
                                  AllowGrouping="False">
                        <dx:GridColumn.DisplayTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Button Content="View" 
                                           Command="{Binding DataContext.ViewAlertCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                           CommandParameter="{Binding}"
                                           Style="{StaticResource AccentButtonStyle}"
                                           Height="24"
                                           Padding="8,2"
                                           FontSize="12"/>
                                    
                                    <Button Content="Ack" 
                                           Command="{Binding DataContext.AcknowledgeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                           CommandParameter="{Binding}"
                                           Height="24"
                                           Padding="8,2"
                                           FontSize="12"
                                           IsEnabled="{Binding CanAcknowledge}"/>
                                           
                                    <Button Content="Resolve" 
                                           Command="{Binding DataContext.ResolveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                           CommandParameter="{Binding}"
                                           Height="24"
                                           Padding="8,2"
                                           FontSize="12"
                                           IsEnabled="{Binding CanResolve}"/>
                                </StackPanel>
                            </DataTemplate>
                        </dx:GridColumn.DisplayTemplate>
                    </dx:GridColumn>
                </dx:GridControl.Columns>
            </dx:GridControl>
        </Border>
    </Grid>
</Page>
