<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Color Palette inspired by Windows 11 Fluent Design -->
    <Color x:Key="DBADashPrimaryColor">#0078D4</Color>
    <Color x:Key="DBADashSecondaryColor">#106EBE</Color>
    <Color x:Key="DBADashAccentColor">#0099BC</Color>
    <Color x:Key="DBADashSuccessColor">#107C10</Color>
    <Color x:Key="DBADashWarningColor">#FFB900</Color>
    <Color x:Key="DBADashErrorColor">#D13438</Color>
    <Color x:Key="DBADashInfoColor">#0078D4</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="DBADashSurfaceColor">#F3F2F1</Color>
    <Color x:Key="DBADashCardColor">#FFFFFF</Color>
    <Color x:Key="DBADashBackgroundColor">#FAFAFA</Color>
    
    <!-- Text Colors -->
    <Color x:Key="DBADashTextPrimaryColor">#323130</Color>
    <Color x:Key="DBADashTextSecondaryColor">#605E5C</Color>
    <Color x:Key="DBADashTextOnAccentColor">#FFFFFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="DBADashPrimaryBrush" Color="{StaticResource DBADashPrimaryColor}" />
    <SolidColorBrush x:Key="DBADashSecondaryBrush" Color="{StaticResource DBADashSecondaryColor}" />
    <SolidColorBrush x:Key="DBADashAccentBrush" Color="{StaticResource DBADashAccentColor}" />
    <SolidColorBrush x:Key="DBADashSuccessBrush" Color="{StaticResource DBADashSuccessColor}" />
    <SolidColorBrush x:Key="DBADashWarningBrush" Color="{StaticResource DBADashWarningColor}" />
    <SolidColorBrush x:Key="DBADashErrorBrush" Color="{StaticResource DBADashErrorColor}" />
    <SolidColorBrush x:Key="DBADashInfoBrush" Color="{StaticResource DBADashInfoColor}" />
    
    <SolidColorBrush x:Key="DBADashSurfaceBrush" Color="{StaticResource DBADashSurfaceColor}" />
    <SolidColorBrush x:Key="DBADashCardBrush" Color="{StaticResource DBADashCardColor}" />
    <SolidColorBrush x:Key="DBADashBackgroundBrush" Color="{StaticResource DBADashBackgroundColor}" />
    
    <SolidColorBrush x:Key="DBADashTextPrimaryBrush" Color="{StaticResource DBADashTextPrimaryColor}" />
    <SolidColorBrush x:Key="DBADashTextSecondaryBrush" Color="{StaticResource DBADashTextSecondaryColor}" />
    <SolidColorBrush x:Key="DBADashTextOnAccentBrush" Color="{StaticResource DBADashTextOnAccentColor}" />

    <!-- Modern Typography -->
    <x:Double x:Key="DBADashTitleFontSize">28</x:Double>
    <x:Double x:Key="DBADashSubtitleFontSize">20</x:Double>
    <x:Double x:Key="DBADashBodyFontSize">14</x:Double>
    <x:Double x:Key="DBADashCaptionFontSize">12</x:Double>
    
    <!-- Modern Spacing -->
    <Thickness x:Key="DBADashPagePadding">24</Thickness>
    <Thickness x:Key="DBADashCardPadding">16</Thickness>
    <Thickness x:Key="DBADashContentPadding">12</Thickness>
    <Thickness x:Key="DBADashSmallPadding">8</Thickness>
    
    <!-- Corner Radius -->
    <CornerRadius x:Key="DBADashCardRadius">8</CornerRadius>
    <CornerRadius x:Key="DBADashButtonRadius">4</CornerRadius>
    
    <!-- Shadows -->
    <Shadow x:Key="DBADashCardShadow">
        <Shadow.BlurRadius>16</Shadow.BlurRadius>
        <Shadow.Offset>0,2</Shadow.Offset>
        <Shadow.Color>#19000000</Shadow.Color>
    </Shadow>

    <!-- Modern Card Style -->
    <Style x:Key="DBADashCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DBADashCardBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource DBADashCardRadius}" />
        <Setter Property="Padding" Value="{StaticResource DBADashCardPadding}" />
        <Setter Property="Shadow" Value="{StaticResource DBADashCardShadow}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#E1DFDD" />
    </Style>

    <!-- Modern Button Style -->
    <Style x:Key="DBADashPrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DBADashPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource DBADashTextOnAccentBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource DBADashButtonRadius}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <!-- Modern Navigation Style -->
    <Style x:Key="DBADashNavigationViewStyle" TargetType="NavigationView">
        <Setter Property="IsBackButtonVisible" Value="Collapsed" />
        <Setter Property="IsSettingsVisible" Value="True" />
        <Setter Property="IsTitleBarAutoPaddingEnabled" Value="False" />
        <Setter Property="MenuItemsSource" Value="{Binding NavigationItems}" />
        <Setter Property="PaneDisplayMode" Value="Auto" />
        <Setter Property="OpenPaneLength" Value="280" />
        <Setter Property="CompactPaneLength" Value="48" />
    </Style>

    <!-- Status Indicator Styles -->
    <Style x:Key="DBADashSuccessIndicatorStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DBADashSuccessBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
    </Style>

    <Style x:Key="DBADashWarningIndicatorStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DBADashWarningBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
    </Style>

    <Style x:Key="DBADashErrorIndicatorStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DBADashErrorBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
    </Style>

    <!-- Modern TextBlock Styles -->
    <Style x:Key="DBADashTitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DBADashTitleFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource DBADashTextPrimaryBrush}" />
    </Style>

    <Style x:Key="DBADashSubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DBADashSubtitleFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource DBADashTextPrimaryBrush}" />
    </Style>

    <Style x:Key="DBADashBodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DBADashBodyFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource DBADashTextPrimaryBrush}" />
    </Style>

    <Style x:Key="DBADashCaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DBADashCaptionFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource DBADashTextSecondaryBrush}" />
    </Style>

</ResourceDictionary>
